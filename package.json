{
  "name": "some-app",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "remix vite:dev",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "lint": "eslint ./app --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "test": "vitest run --reporter verbose",
    "test:watch": "vitest --reporter verbose --watch",
    "test:coverage": "vitest run --reporter verbose --coverage",
    "clean": "rimraf ./node_modules/.cache ./build ./public/build",
    "prebuild": "npm run clean && echo All clean âœ¨",
    "build": "run-s build:*",
    "build:remix": "remix vite:build",
    "test:e2e:dev": "cross-env PORT=5173 playwright test",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env PORT=8811 playwright test"
  },
  "dependencies": {
    "@epic-web/config": "^1.21.3",
    "@prisma/client": "^6.14.0",
    "@prisma/extension-accelerate": "^2.0.2",
